# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Request-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ISSUER=api-gateway
JWT_AUDIENCE=api-gateway
JWT_EXPIRATION=24h

# Proxy Configuration
# Option 1: Single Backend (legacy)
# Uncomment this line for single backend:
# PROXY_TARGET_URL=http://localhost:9000

# Option 2: Multiple Backends (recommended)
# Uncomment the services you need:
CRM_SERVICE_URL=http://localhost:9001
CBS_SERVICE_URL=http://localhost:9002
BILLING_SERVICE_URL=http://localhost:9003
# AUTH_SERVICE_URL=http://localhost:9004
# NOTIFICATION_SERVICE_URL=http://localhost:9005
# PAYMENT_SERVICE_URL=http://localhost:9006

# Proxy timeout for all services
PROXY_TIMEOUT=30s

# Logging Configuration
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info
# Component name for structured logs (default: api-gateway)
LOG_COMPONENT_NAME=api-gateway
